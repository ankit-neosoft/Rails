<div class="category-tab"><!--category-tab-->
  <div class="col-sm-12">
    <ul class="nav nav-tabs">
    <%if @category.present? %>
      <% navigation_list.order('name ASC').where(status: true).each_with_index do |subcategory, i|%>
        <% klass = '' %>
        <% klass = 'active' if params[:subcategory_id].to_s == subcategory.id.to_s  %>
        <li class= <%= 'active' if params[:subcategory_id].to_s == subcategory.id.to_s %> >
          <%= link_to subcategory.name.gsub(/:.+:/,''), category_brand_path(subcategory_id: subcategory.id), class: klass %>
        </li>
      <% end %>
    <% end %>
    </ul>
  </div>

  <div class="">
  <%if @category.present? %>
    <%# navigation_list.each_with_index do |subcategory, i|%>
      <div class="" >
      <% if @products.present? %>
        <% @products.where(status: true).each do |product|%>
          <div class="col-sm-3">
            <div class="product-image-wrapper">
              <div class="single-products">
                <div class="productinfo text-center">
                  <%if product.pictures.present?%>
                    <%= image_tag product.pictures.first.image.url%>
                  <% end %>
                  <h2>Rs.<%= product.price%></h2>
                  <p class="product_name_height"><%= product.name%></p>
                  <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                </div>
              </div>
            </div>
          </div>
        <% end %> 
        <% end %>
      </div>
    <%# end %>
  <% end %>
  </div>
</div><!--/category-tab-->