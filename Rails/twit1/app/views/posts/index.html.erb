<div class="container">

  <% if current_user %>
    <div class="col-sm-5">
      <h1>Your Twitter Profile</h1>  
      <img class="avatar" src="">
      <span class="name"><b><%= current_user.name %></b></span> @<%= current_user.username %>
      <p>
        <%= current_user.posts.size %> Tweets
        <span class="spacing">XX Followers</span>
        <span class="spacing">XX Following</span>
      </p>
    </div>
  <% end %>

  <div class="col-sm-6">
    <h1>Create a Tweet</h1>
    <p>
    <%= form_for @post do |f| %>
        <%= f.text_area :content %>
        <%= f.submit "Tweet!" %>
    <% end %>
    </p>

    <h1>Public Tweets</h1>
      <% @posts.each do |tweet| %>  
        <img class="avatar" src="">
        <% if tweet.user %>
          <span class="name"><b><%= tweet.user.name %></b></span> 
          <small>@<%= tweet.user.username %> 
          <span class="time"><%= time_ago_in_words(tweet.created_at) %> ago</span></small>
          <p> <%= tweet.content %> </p>    
        <% end %>
      <% end %>
  </div>
</div>