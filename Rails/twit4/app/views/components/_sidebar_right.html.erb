
    <div class="col-sm-3 ">
        <div class="profile-cards">
          <ul class="list-group", style="list-style:none" >
            <li class="list-group-item">
              <div class="profile_image"><%= image_tag(current_user.avatar.url(:medium),:class => "img_preview") %><br></div>
            </li>
            <li class="list-group-item">
              <b><%= link_to current_user.name, post_path(current_user) %></b>@<%= current_user.username %>
            </li>
            <% if !current_user %>
            <li class="list-group-item">
              <p><%= render partial: '/components/follow_button', locals: {user: @user}%></p>
            </li>
            <% end %>
            <li class="list-group-item list-custom"> 
              <table class="table table-bordered table-condensed table-custom" >
                <tr>
                  <td> Tweets </td>
                  <td> Followers </td>
                  <td> Following </td>
                </tr>
                <tr>
                  <td class="info" ><%= link_to current_user.posts.size, user_path(current_user) %></td>
                  <td class="info"><%= link_to current_user.followers.count, followers_user_path(current_user) %></td>
                  <td class="info"><%=link_to current_user.following.count, following_user_path(current_user) %></td>
                </tr>
              </table>
            </li>
          </ul>
        </div>

        <ul class="list-group">
          <li class=" list-group-item btn btn-hover"><%= link_to 'Users', users_path%></li>
          <li class=" list-group-item btn btn-hover "><%= link_to 'Posts', root_path %></li>
          <li class=" list-group-item btn btn-hover"><%= link_to 'Images',posts_picture_path %></li>
        </ul>
    </div>
  