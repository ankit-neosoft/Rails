<div class="panel panel-danger">
  <div class="panel-heading">
    <h2>Create a Tweet</h2>
  </div>
  <div class="panel-body">
    <p>
    <%= form_for @post do |f| %>
      <%= f.text_area :content, class: 'form-control' %><br>
      <%= f.submit "Tweet!" , class: 'btn btn-primary' %>
      <%= f.submit "Upload Image!" , class: 'btn ' %>
    <% end %>
    </p>
  </div>
</div>