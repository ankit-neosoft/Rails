<div class="container">
  <%= render '/components/sidebar_right'%>
  <div class="col-sm-6">
    <div class="body-card">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h1>All users</h1>
        </div>
        <div>
          <ul class="list-group">
            <% @users.each do |user| %>
            <li class="list-group-item">  
              <table style="width:100%">
                <tr>
                  <th rowspan="2"><%= image_tag(user.avatar.url(:thumb), width: 100, height: 100) %></th>
                  <td colspan = "2"><b><%= link_to user.name, post_path(user) %></b>
                  <small>@<%= user.username %> <br></small></td>
                </tr>
                <tr>
                  <td><%= user.followers.count%> Followers</td>
                  <td><%= user.following.count%>  Following</td>
                </tr>
              </table>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
  </div>
</div>